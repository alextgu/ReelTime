{
  "name": "ReelTime",
  "description": "Tracks the number of reels scrolled on YouTube Shorts, Instagram Reels, Facebook Reels, and TikTok to discourage bedrotting.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "tabs"
  ],

  "host_permissions": [
  "*://www.youtube.com/*",
  "*://*.instagram.com/*",
  "*://*.facebook.com/*",
  "*://*.tiktok.com/*"
],



  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
   
  },

  "background": {
    "service_worker": "scripts/background.js"
  },
  
  "content_scripts": [
  {
    "matches": ["*://www.tiktok.com/*"],
    "js": ["content/tiktok.js"],
    "run_at": "document_idle"
  }
]


}
